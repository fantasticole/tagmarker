{
  "name": "TagMarker",
  "short_name": "tagmarker",
  "manifest_version": 2,
  "description": "Bookmark using tags, rather than folders",
  "version": "0.1",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "assets/hash_icon.png",
    "default_popup": "popup.html",
    "default_title": "TagMarker"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [],
      "js": ["injected.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "bookmarks",
    "storage",
    "https://ajax.googleapis.com/"
  ]
}